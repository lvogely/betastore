<h1>New login</h1>

<form method="POST" action="/log_in">
  <label>
    Email
    <input type="email" name="email" />
  </label>

  <label>
    Password
    <input type="password" name="password" />
  </label>

  <button type="submit">Log In</button>
</form>

<% if flash[:alert] %>
  <p style="color: red"><%= flash[:alert] %></p>
<% end %>